<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="240dp"
        android:id="@+id/toolsbar_md"
        app:cardElevation="8dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#37474F"
        app:cardCornerRadius="3dp"
        android:layout_height="240dp">


        <com.agmcs.FloatingShadow.Views.VerticalViewPager
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:id="@+id/tools_viewpager"
            android:layout_height="match_parent"></com.agmcs.FloatingShadow.Views.VerticalViewPager>


    </android.support.v7.widget.CardView>
</RelativeLayout>
