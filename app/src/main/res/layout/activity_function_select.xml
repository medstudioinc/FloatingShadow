<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/card_view_linear"
    android:paddingBottom="8dp"
    tools:context="com.qialaga.agmcs.FloatingShadow.FunctionSelectActivity">



    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:background="#00000000"
                android:id="@+id/up_setting_btn"
                android:layout_width="60dp"
                android:alpha="0.7"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:src="@drawable/setting_up"
                android:layout_centerHorizontal="true"/>
            <ImageButton
                android:background="#00000000"
                android:alpha="0.7"
                android:id="@+id/click_setting_btn"
                android:layout_width="60dp"
                android:layout_margin="2dp"
                android:layout_height="60dp"
                android:layout_below="@id/up_setting_btn"
                android:layout_centerHorizontal="true"
                android:src="@drawable/setting_click"/>
            <ImageButton
                android:background="#00000000"
                android:alpha="0.7"
                android:id="@+id/left_setting_btn"
                android:layout_width="60dp"
                android:layout_margin="2dp"
                android:layout_height="60dp"
                android:layout_toLeftOf="@id/click_setting_btn"
                android:layout_below="@id/up_setting_btn"
                android:src="@drawable/setting_left"/>
            <ImageButton
                android:background="#00000000"
                android:alpha="0.7"
                android:id="@+id/right_setting_btn"
                android:layout_width="60dp"
                android:layout_margin="2dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@id/click_setting_btn"
                android:layout_below="@id/up_setting_btn"
                android:src="@drawable/setting_right"/>
            <ImageButton
                android:background="#00000000"
                android:alpha="0.7"
                android:id="@+id/down_setting_btn"
                android:layout_width="60dp"
                android:layout_margin="2dp"
                android:layout_height="60dp"
                android:layout_below="@id/click_setting_btn"
                android:src="@drawable/setting_down"
                android:layout_centerHorizontal="true"/>
            <ImageButton
                android:background="#00000000"
                android:id="@+id/long_setting_btn"
                android:alpha="0.7"
                android:layout_alignParentRight="true"
                android:layout_below="@id/click_setting_btn"
                android:layout_margin="2dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/setting_long"/>
            <ImageButton
                android:background="#00000000"
                android:id="@+id/double_setting_btn"
                android:alpha="0.7"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/click_setting_btn"
                android:layout_margin="2dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/setting_double"/>
            </RelativeLayout>


    </android.support.v7.widget.CardView>





</LinearLayout>
