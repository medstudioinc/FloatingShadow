            android:id="@+id/btn8"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:padding="6dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <ImageButton
            android:id="@+id/btn9"
            android:layout_weight="1"
            android:background="#00000000"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher"
            android:scaleType="centerInside"
            android:padding="6dp"

            android:layout_width="60dp"
            android:layout_height="60dp" />
    </LinearLayout>
</LinearLayout>

